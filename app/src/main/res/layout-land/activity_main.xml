<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/expr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="8"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_row="0"
        android:layout_rowWeight="0"
        android:maxLines="1"
        android:scrollbars="vertical"
        android:text=""
        android:textSize="36sp" />

    <TextView
        android:id="@+id/ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="8"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_row="1"
        android:layout_rowWeight="0"
        android:text="= "
        android:textSize="36sp" />


    <TextView
        android:id="@+id/lBracket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="("
        android:textSize="20sp" />

    <TextView
        android:id="@+id/rBracket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text=")"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/expMinusOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="1/x"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="sin"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/cos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="cos"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="tan"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="e"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="ln"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="log"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/pi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="pi"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nRt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="ⁿ√x"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="xⁿ"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/inv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="6"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="inv"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="6"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="x!"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/abs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="6"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="abs"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="C"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="/"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="*"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="&lt;-"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="7"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="8"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="9"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="-"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="4"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="6"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="+"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="="
        android:textSize="20sp" />


    <TextView
        android:id="@+id/mod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="6"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="%"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="6"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="6"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:text="⋅"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="6"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="6"
        android:layout_rowWeight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/goLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="&lt;"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/goRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="&gt;"
            android:textSize="20sp" />

    </LinearLayout>

</GridLayout>